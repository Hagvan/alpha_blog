<h1 class="text-center mt-4">Category: <%= @category.name %></h1>
<% if logged_in? %>
  <div class="text-center mt-4">
    <% if logged_in? && current_user.admin? %>
      <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-info" %>
      <%= link_to 'Delete category', category_path(@category), class: "btn btn-outline-danger", method: :delete, 
        data: { confirm: "Are you sure you want to delete the user account and all associated articles?" } %>
    <% end %>
  </div>
<% end %>

<h3 class="text-center mt-4"><%= @category.name %>'s articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>
<%= render 'articles/article' %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>

